<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    tools:layout_editor_absoluteY="81dp">


    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="384dp"
        android:layout_height="511dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp"
        tools:ignore="MissingConstraints">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="35dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/billAmountTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Bill Amount:"
                android:textColor="@color/color_dark_pink"
                android:textSize="20sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/currencySignTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:gravity="right"
                    android:text="$"
                    android:textColor="@color/color_dark_pink"
                    android:textSize="20sp" />

                <EditText
                    android:id="@+id/bAmount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:layout_weight="1"
                    android:ems="10"
                    android:hint="Enter bill amount"
                    android:inputType="numberDecimal"
                    android:textColor="@color/color_dark_pink"
                    android:textSize="14sp" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/numberOfPeopleTextView"
                android:layout_width="183dp"
                android:layout_height="wrap_content"
                android:text="Number of People:"
                android:textColor="@color/color_dark_pink"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/people"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:hint="Enter Number of People"
                android:inputType="number"
                android:textColor="@color/color_dark_pink"
                android:textSize="14sp"
                android:visibility="visible" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_marginBottom="70dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"

            android:orientation="horizontal">

            <TextView
                android:id="@+id/TipPercentageTextView"
                android:layout_width="367dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Tip Percentage:"
                android:textColor="@color/color_dark_pink"
                android:textSize="20sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_weight="1"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/percent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ems="10"
                    android:hint="Enter Tip Percentage"
                    android:inputType="number"

                    android:textColor="@color/color_dark_pink"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tipPercentageSignTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:text="%"
                    android:textColor="@color/color_dark_pink"
                    android:textSize="20sp" />
            </LinearLayout>

        </LinearLayout>

        <Button
            android:id="@+id/suggest"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="#ffffff"
            android:textSize="16sp"
            android:text="@string/underline"
            android:textColor="@color/color_dark_pink"/>

        <android.support.v4.widget.Space
            android:layout_width="match_parent"
            android:layout_height="30sp" />

        <Button
            android:id="@+id/submit"
            android:layout_width="80dp"
            android:layout_height="35dp"
            android:gravity="center"
            android:layout_gravity="center"
            android:background="@drawable/mybuttonbackground"
            android:text="SUBMIT"
            android:fontFamily="sans-serif-condensed"
            android:textStyle="bold"
            android:textColor="#ffffff"
            android:textSize="22sp" />


    </LinearLayout>


</android.support.constraint.ConstraintLayout>